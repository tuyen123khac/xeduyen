<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XeDuyen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="ButtonSolidTheme" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">@dimen/_15sdp</item>
        <item name="background">@color/red</item>
        <item name="shapeAppearance">@style/AppShapeAppearance</item>
    </style>

    <style name="AppShapeAppearance">
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
    </style>
</resources>